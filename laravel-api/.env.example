APP_NAME=PINLY
APP_ENV=production
APP_KEY=base64:YOUR_APP_KEY_HERE
APP_DEBUG=false
APP_URL=https://pinly.com.tr

# Database
DB_CONNECTION=mysql
DB_HOST=localhost
DB_PORT=3306
DB_DATABASE=pinly_store
DB_USERNAME=your_db_user
DB_PASSWORD=your_db_password

# JWT Authentication
JWT_SECRET=your-super-secret-jwt-key-change-in-production
JWT_TTL=10080

# Master Encryption Key (AES-256-GCM)
# Generate with: openssl rand -base64 32
MASTER_ENCRYPTION_KEY=o6kPj1WqrrH/ZWdlwh/FXKnOZ02UdkyyxTmsKRy2j9w=

# RapidAPI (PUBG Player Lookup)
RAPIDAPI_KEY=your_rapidapi_key

# Mail Settings (SMTP)
MAIL_MAILER=smtp
MAIL_HOST=smtp.example.com
MAIL_PORT=587
MAIL_USERNAME=null
MAIL_PASSWORD=null
MAIL_ENCRYPTION=tls
MAIL_FROM_ADDRESS=noreply@pinly.com.tr
MAIL_FROM_NAME="PINLY"

# CORS
CORS_ALLOWED_ORIGINS=https://pinly.com.tr

# Rate Limiting
RATE_LIMIT_PER_MINUTE=60